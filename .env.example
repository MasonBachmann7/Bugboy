# BugStack Error Capture Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# Server-side Configuration
# ===========================================

# Required: The URL of your BugStack error service
ERROR_SERVICE_URL=https://api.bugstack.dev

# Required: Your BugStack API key (get this from your BugStack dashboard)
BUGSTACK_API_KEY=your_api_key_here

# Required: Your GitHub repository (used for PR creation)
GITHUB_REPO=your-username/your-repo

# Optional: Environment identifier (defaults to 'development')
BUGSTACK_ENVIRONMENT=development

# Optional: Enable verbose logging for the SDK (defaults to false)
BUGSTACK_DEBUG=false

# ===========================================
# Client-side Configuration (NEXT_PUBLIC_)
# These are exposed to the browser
# ===========================================

NEXT_PUBLIC_ERROR_SERVICE_URL=https://api.bugstack.dev
NEXT_PUBLIC_BUGSTACK_API_KEY=your_public_api_key_here
NEXT_PUBLIC_BUGSTACK_ENVIRONMENT=development
NEXT_PUBLIC_BUGSTACK_DEBUG=false
